{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
